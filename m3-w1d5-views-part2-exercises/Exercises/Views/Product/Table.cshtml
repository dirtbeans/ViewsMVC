        <ul>
            <li><a href="#">List View</a></li>
            <li><a href="#">Table View</a></li>
            <li><a href="#">Tile View</a></li>
        </ul>
    </nav>    <section id="main-content">
        <h2 class="center">Toy Department</h2>
        <table class="center">
            <tr><td>ImageName</td></tr>
            <tr><td>Name</td></tr>
            <tr><td>IsTopSeller</td></tr>
            <tr><td>Manufacturer</td></tr>
            <tr><td>Price</td></tr>
            <tr><td>WeightIbLbs</td></tr>
            <tr><td>AverageRating</td></tr>
        </table>
        <table>
            <tr>
                @foreach (Product product in Model)
                {
                    <td>@product.Name</td>
                }
            </tr>

            <tr>
                @foreach (Product product in Model)
                {
                    <td>@product.IsTopSeller</td>
                }
            </tr>
            <tr>
                @foreach (Product product in Model)
                {
                    <td>@product.Manufacturer</td>
                }
            </tr>
            <tr>
                @foreach (Product product in Model)
                {
                    <td>@product.Price</td>
                }
            </tr>
            <tr>
                @foreach (Product product in Model)
                {
                    <td>@product.WeightIbLbs</td>
                }
            </tr>
            <tr>
                @foreach (Product product in Model)
                {
                    <td>@product.AverageRating</td>
                }
            </tr>
        </table>

