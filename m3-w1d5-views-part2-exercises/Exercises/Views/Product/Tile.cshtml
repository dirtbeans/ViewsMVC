@using Exercises.Models
@{
    //Layout = null;
}

@model List<Product>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Tile</title>
    <link rel="stylesheet" href="~/Content/styles.css" />
</head>
<body>
    <header>
        <h1>ASP.NET MVC Exercises - Views Part 2: Models</h1>
    </header>
    <nav>
        <ul>
            <li><a href="#">List View</a></li>
            <li><a href="#">Table View</a></li>
            <li><a href="#">Tile View</a></li>
        </ul>
    </nav>
    <section id="main-content">

        <h2 class="center">Toy Department</h2>

        @foreach (Product product in Model)
        {
            <div class="tile">

                <h1>
                    @product.Name
                    @if (product.IsTopSeller)
                    {
                        <p1>BEST SELLER!</p1>
                    }<br />
                </h1>
                <h2>by @product.Manufacturer <br /></h2>
                <h3>@product.Price <br /></h3>
                <h4><b>Weight </b> <p2>@product.WeightIbLbs lbs </p2><br /></h4>
                <h5>
                    @if (product.AverageRating == 1)
                    {<img src="1-star.png" />}
                    else if (product.AverageRating == 2)
                    {<img src="2-star.png" /> }
                    else if (product.AverageRating == 3)
                    {<img src="3-star.png" /> }
                    else if (product.AverageRating == 4)
                    {<img src="4-star.png" /> }
                    else if (product.AverageRating == 5)
                    {<img src="5-star.png" /> }
                    <br />
                </h5>
            </div>
        }


    </section>
</body>
</html>
